{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.base.json"
    },
    "plugins": [
        "@typescript-eslint",
        "react",
        "jsx-expressions"
    ],
    "settings": {
        "react": {
          "version": "detect"
        }
    },
    "rules": {
       
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "max-params" : [
            "error",
            2
        ]
        ,
        "jsx-expressions/strict-logical-expressions": "error"
        ,
        "react/react-in-jsx-scope": "off"
      
    }
}
